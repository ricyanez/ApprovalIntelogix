@model IEnumerable<ApprovalIntelogix.Models.Business>

@{
    ViewData["Title"] = "Index";
}

<h1>Organisations</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Add New Organisation</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Business1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdBusiness">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
