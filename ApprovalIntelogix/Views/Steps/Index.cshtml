@model IEnumerable<ApprovalIntelogix.Models.Step>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Namestep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApprovalCondition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdWorkflowNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Namestep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovalCondition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdWorkflowNavigation.IdWorkflow)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdStep">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdStep">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdStep">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
